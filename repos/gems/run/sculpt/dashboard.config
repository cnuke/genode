<config verbose="yes">
	<parent-provides>
		<service name="ROM"/>
		<service name="PD"/>
		<service name="RM"/>
		<service name="CPU"/>
		<service name="LOG"/>
		<service name="Nitpicker"/>
		<service name="Timer"/>
		<service name="Rtc"/>
	</parent-provides>

	<default-route> <any-service> <parent/> <any-child/> </any-service> </default-route>

	<default caps="100"/>

	<start name="report_rom">
		<resource name="RAM" quantum="1M"/>
		<provides> <service name="Report"/> <service name="ROM"/> </provides>
		<config verbose="no">
			<policy label="menu_view -> dialog"   report="clock -> dialog"/>
			<policy label="clock -> clock.config" report="rtc_clock -> config"/>
		</config>
		<route>
			<any-service> <parent/> </any-service>
		</route>
	</start>

	<start name="rtc_clock">
		<resource name="RAM" quantum="1M"/>
		<config/>
		<route>
			<service name="Report"> <child name="report_rom"/> </service>
			<any-service> <parent/> </any-service>
		</route>
	</start>

	<start name="clock">
		<resource name="RAM" quantum="1M"/>
		<configfile name="clock.config"/>
		<route>
			<service name="ROM" label="clock.config">
				<child name="report_rom"/> </service>
			<service name="Report"> <child name="report_rom"/> </service>
			<any-service> <parent/> </any-service>
		</route>
	</start>

	<start name="menu_view" caps="200">
		<resource name="RAM" quantum="5M"/>
		<config xpos="5" ypos="748">
			<report hover="no"/>
			<libc stderr="/dev/log"/>
			<vfs>
				<tar name="menu_view_styles.tar"/>
				<dir name="dev"> <log/> </dir>
			</vfs>
		</config>
		<route>
			<service name="ROM" label="dialog"> <child name="report_rom"/> </service>
			<any-service> <parent/> </any-service>
		</route>
	</start>
</config>
