<runtime ram="16M" caps="300" binary="init">

	<requires>
		<nitpicker/>
		<file_system label="fonts" writeable="no"/>
	</requires>

	<provides> <terminal/> </provides>

	<content>
		<rom label="ld.lib.so"/>
		<rom label="nit_fb"/>
		<rom label="terminal"/>
		<rom label="vfs.lib.so"/>
	</content>

	<config>
		<parent-provides>
			<service name="ROM"/>
			<service name="PD"/>
			<service name="RM"/>
			<service name="CPU"/>
			<service name="LOG"/>
			<service name="Timer"/>
			<service name="File_system"/>
			<service name="Nitpicker"/>
		</parent-provides>

		<default-route> <any-service> <parent/> <any-child/> </any-service> </default-route>

		<default caps="100"/>

		<service name="Terminal">
			<default-policy> <child name="terminal"/> </default-policy>
		</service>

		<start name="nit_fb">
			<resource name="RAM" quantum="4M"/>
			<provides> <service name="Framebuffer"/> <service name="Input"/> </provides>
			<config xpos="10" ypos="10" initial_width="800" initial_height="600"/>
		</start>

		<start name="terminal">
			<resource name="RAM" quantum="4M"/>
			<provides> <service name="Terminal"/> </provides>
			<config>
				<vfs> <dir name="fonts"> <fs/> </dir> </vfs>
			</config>
			<route>
				<service name="Framebuffer"> <child name="nit_fb"/> </service>
				<service name="Input"> <child name="nit_fb"/> </service>
				<service name="File_system"> <parent label="fonts"/> </service>
				<any-service> <parent/> <any-child/> </any-service>
			</route>
		</start>
	</config>

</runtime>

