<config verbose_domain_state="yes">
	<report interval_sec="5" bytes="yes" config="yes" config_triggers="yes" links="yes" stats="yes"/>
	<default-policy domain="default"/>

	<policy label_prefix="nic -> " domain="uplink"/>

	<policy label_prefix="vbox6_raw-ubuntu" domain="vbox6_raw-ubuntu"/>
	<policy label_prefix="vbox6_raw-win"    domain="vbox6_raw-win"/>

	<domain name="uplink">
		<nat domain="default" tcp-ports="1000" udp-ports="1000" icmp-ids="1000"/>
	</domain>

	<domain name="uplink-dummy"/>

	<domain name="default" interface="10.0.1.1/24">
		<dhcp-server ip_first="10.0.1.2" ip_last="10.0.1.200" dns_config_from="uplink"/>
		<tcp dst="0.0.0.0/0"> <permit-any domain="uplink"/> </tcp>
		<udp dst="0.0.0.0/0"> <permit-any domain="uplink"/> </udp>
		<icmp dst="0.0.0.0/0"             domain="uplink"/>
	</domain>


	<domain name="vbox6_raw-ubuntu" interface="10.0.51.1/24">
		<dhcp-server ip_first="10.0.51.2" ip_last="10.0.51.2" dns_config_from="uplink"/>
		<tcp dst="0.0.0.0/0"> <permit-any domain="uplink-dummy"/> </tcp>
		<udp dst="0.0.0.0/0"> <permit-any domain="uplink-dummy"/> </udp>
		<icmp dst="0.0.0.0/0"             domain="uplink-dummy"/>
	</domain>

	<domain name="vbox6_raw-win" interface="10.0.61.1/24">
		<dhcp-server ip_first="10.0.61.2" ip_last="10.0.61.2" dns_config_from="uplink"/>
		<tcp dst="0.0.0.0/0"> <permit-any domain="uplink-dummy"/> </tcp>
		<udp dst="0.0.0.0/0"> <permit-any domain="uplink-dummy"/> </udp>
		<icmp dst="0.0.0.0/0"             domain="uplink-dummy"/>
	</domain>
</config>
